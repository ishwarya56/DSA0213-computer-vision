import cv2
# Step 1: Read the image
image = cv2.imread(r"C:\Users\hv364\Music\landscape.jpg")
# Check if image is loaded successfully
if image is None:
    print("Error: Image not found or path is incorrect.")
else:
    # Step 2: Convert to grayscale (Canny needs single channel)
    gray_image = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)
    # Step 3: Apply Canny edge detector
    # Arguments: image, threshold1, threshold2
    edges = cv2.Canny(gray_image, 100, 200)
    # Step 4: Show original and edge images
    cv2.imshow("Original Image", image)
    cv2.imshow("Edge Outline", edges)
    cv2.waitKey(0)
    cv2.destroyAllWindows()
