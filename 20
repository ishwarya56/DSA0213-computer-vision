import cv2

# Read image
img = cv2.imread("C:/Program Files/opencv/image.png")
gray = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)

# Blur image
blurred = cv2.GaussianBlur(gray, (5,5), 0)

# High-Boost parameter
A = 2   # You can change (>=1)

# High-Boost Sharpening
high_boost = cv2.addWeighted(gray, A, blurred, -1, 0)

# Display
cv2.imshow("Original", gray)
cv2.imshow("High-Boost Sharpened", high_boost)

cv2.waitKey(0)
cv2.destroyAllWindows()
