import cv2

img = cv2.imread("C:/Program Files/opencv/image.png")
h, w = img.shape[:2]

center = (w//2, h//2)

cw = cv2.warpAffine(img, cv2.getRotationMatrix2D(center, -45, 1), (w, h))
ccw = cv2.warpAffine(img, cv2.getRotationMatrix2D(center, 45, 1), (w, h))

cv2.imshow("Clockwise", cw)
cv2.imshow("Counter Clockwise", ccw)

cv2.waitKey(0)
cv2.destroyAllWindows()
