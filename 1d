
 import cv2
import numpy as np
# Read the image from the given path
image = cv2.imread(r"C:\Users\hv364\Music\flower.jpg")
if image is None:
    print("Error: Image not found or incorrect path.")
else:
    # Convert to grayscale
    gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)
    # Convert grayscale to binary image using thresholding
    _, binary = cv2.threshold(gray, 127, 255, cv2.THRESH_BINARY)
    # Create a 5x5 kernel for dilation
    kernel = np.ones((5, 5), np.uint8)
    # Apply dilation operation
    dilated = cv2.dilate(binary, kernel, iterations=1)
    # Show original, binary, and dilated images
    cv2.imshow("Original Image", image)
    cv2.imshow("Binary Image", binary)
    cv2.imshow("Dilated Image", dilated)
    cv2.waitKey(0)
    cv2.destroyAllWindows()
